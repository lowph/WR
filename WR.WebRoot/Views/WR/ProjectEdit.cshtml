@model WR.Models.ADODdesign.项目信息
@{
    Layout = "~/Views/Shared/_LayoutEdit.cshtml";
    string parentName = "";
    string parentId = "";
    if (Model.上级项目信息 != null)
    {
        parentName = Model.上级项目信息.名称;
        parentId = Model.上级项目信息.ID.ToString();
    }
}
<form class="form-inline" action="/wr/projectedit" id="form" method="post">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div class="form-group">
        <div class="input-group" style="width:300px;">
            <div class="input-group-addon">上级项目</div>
            <input type="text" readonly="readonly" class="form-control" value="@parentName" />
            <div class="input-group-addon" style="background-color:#fff;"><label><input type="checkbox" /> 置顶</label></div>
            <input type="hidden" class="form-control" name="上级ID" value="@parentId">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            <div class="input-group-addon">项目名称</div>
            <input type="text" class="form-control" placeholder="名称" name="名称" value="@Model.名称">
        </div>
    </div>
    <div class="form-group">
        <div class="input-group">
            @if (Model.启用标识 == true)
            {
                <label>
                    <input type="checkbox" name="启用标识" checked="checked" value="true" /> 启用
                </label>
            }
            else
            {
                <label>
                    <input type="checkbox" name="启用标识" value="true" /> 启用
                </label>
            }
        </div>
    </div>
    <a href="javascript:void(0);" class="btn btn-primary" id="submit">提交</a>
</form>
@section scripts{

    <script type="text/javascript">

        $(function () {
            $("#submit").click(function () {

                $("#form").submit();
            }); 
        });
    </script>
}