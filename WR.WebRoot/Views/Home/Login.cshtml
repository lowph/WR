@{
    ViewBag.Title = "登录";
}
<div class="row">
    <div class="col-md-6">
        <form action="/home/login" method="post" id="form">
            <div class="form-group">
                <label class="sr-only"></label>
                <div class="input-group">
                    <div class="input-group-addon">山下一群鹅</div>
                    <input type="password" class="form-control" placeholder="下一句" name="pwd">
                </div>
            </div>          
        </form>
        <input type="text" value="提交" class="btn btn-primary" id="submit" />
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        $(function () {
            $("#submit").click(function () {
                $("#form").submit();
            });
        });
    </script>
}